// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator kysely {
  provider = "prisma-kysely"
  output   = "../src/lib/db"
  fileName = "types.ts"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db.sqlite"
}

model Users {
  id           String  @id
  google_id    String  @unique
  pfp_url      String
  name         String
  phone_number String?

  Session      Sessions[]
  Competitions Competitions[]

  @@index([phone_number], name: "phone_number")
}

model Sessions {
  id         String @id
  expires_at Int
  user       Users  @relation(fields: [user_id], references: [id])
  user_id    String
}

model Teams {
  id          String @id
  team_number Int

  Competitions     Competitions  @relation(fields: [competition_name], references: [id])
  competition_name String
  TeamToMatch      TeamToMatch[]
}

model Competitions {
  id     String @id
  secret String
  toa_id String

  teams   Teams[]
  matches Matches[]
  users   Users[]
}

model Matches {
  id         String  @id
  is_queuing Boolean
  is_done    Boolean

  Competitions     Competitions @relation(fields: [competition_name], references: [id])
  competition_name String

  teams TeamToMatch[]
}

model TeamToMatch {
  // Red1, Red2, Red3, Blue1, Blue2, Blue3
  alliance String

  Teams   Teams  @relation(fields: [team_id], references: [id])
  team_id String

  Matches  Matches @relation(fields: [match_id], references: [id])
  match_id String

  @@id([team_id, match_id])
}
